# 俄罗斯方块配置文件

# 声音设置
# 是否支持声音
support_sound = false

# 显示设置
# 是否显示游戏区的网格
show_grid_line = true
# 是否显示预览区的网格
show_preview_grid_line = true
# 形状是否支持彩色
support_colorful_shape = true
# 障碍物是否支持彩色
support_colorful_ground = true
# 预览是否支持彩色
support_colorful_preview = true

# 关卡选择
# 当前的级别集
current_level_set = 2
# 初始级别
init_level = 0

# 控制键设置
# 游戏开始/结束的键码
start_key = 0xa (Enter)
# 游戏暂停/继续的键码
pause_key = 0x50 (P)
# 形状左移的键码
left_key = 0x25 (Left)
# 形状右移的键码
right_key = 0x27 (Right)
# 形状变形的键码
rotate_key = 0x26 (Up)
# 形状加速下落的键码
down_key = 0x28 (Down)
# 形状直落到底的键码
swift_key = 0x20 (Space)
